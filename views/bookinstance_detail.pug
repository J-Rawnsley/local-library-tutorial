extends layout 

block content 

    h1 Book Instance Information
    h4 ID: #{bookInstance._id} 

    p #[strong Title: ] 
        a(href=book.url) #{book.title}
    p #[strong Imprint: ] #{bookInstance.imprint}
    if bookInstance.status == "Available"
        p #[strong Status: ] 
            span.text-success #{bookInstance.status}
    if bookInstance.status == "Maintenance"
        p #[strong Status: ] 
            span.text-danger #{bookInstance.status}
    if bookInstance.status == "Loaned"
        p #[strong Status: ] 
            span.text-warning #{bookInstance.status}


    if bookInstance.status != "Available"
        p #[strong Due back: ] #{bookInstance.due_back_formatted}

    p 
        a(href= bookInstance.url + "/delete") Delete this book instance
    p
        a(href=bookInstance.url+"/update") Update this book instance